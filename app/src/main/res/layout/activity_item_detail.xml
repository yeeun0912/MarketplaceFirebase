<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:id="@+id/textViewContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textSeller">

        <TextView
            android:id="@+id/textTitle"
            android:layout_width="0dp"
            android:layout_height="51dp"
            android:layout_weight="1"
            android:text="제목"
            android:fontFamily="sans-serif"
            android:textColor="#333333"
            android:textSize="18sp"
            android:gravity="center"
            tools:layout_editor_absoluteY="267dp" />

        <TextView
            android:id="@+id/textPrice"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="가격"
            android:fontFamily="sans-serif"
            android:textColor="#333333"
            android:textSize="18sp"
            android:gravity="center"
            tools:layout_editor_absoluteY="273dp" />

    </LinearLayout>

    <TextView
        android:id="@+id/textContent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="16dp"
        android:layout_weight="1"
        android:text="판매 내용"
        android:fontFamily="sans-serif"
        android:textColor="#333333"
        android:textSize="16sp"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewContainer"
        />

    <LinearLayout
        android:id="@+id/textView5ButtonContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="24dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/textStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="판매 여부"
            android:fontFamily="sans-serif"
            android:textColor="#333333"
            android:textSize="18sp"
            tools:layout_editor_absoluteX="34dp"
            tools:layout_editor_absoluteY="653dp" />

        <Button
            android:id="@+id/buttonSendMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="판매자에게 메시지 보내기"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="275dp"
            tools:layout_editor_absoluteY="638dp" />

    </LinearLayout>

    <TextView
        android:id="@+id/textSeller"
        android:layout_width="214dp"
        android:layout_height="30dp"
        android:layout_marginStart="18dp"
        android:layout_marginTop="80dp"
        android:text="판매자"
        android:fontFamily="sans-serif"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>